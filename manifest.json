{
    "name": "Pomoblocko",
    "version": "1.0.0",
    "manifest_version": 3,
    "permissions": [
      "storage",
      "activeTab",
      "tabs",
      "nativeMessaging",
      "alarms"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["pomoscripto.js"]
    }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      {
        "resources": ["landing.html", "landingstyles.css", "landingscript.js"],
        "matches": ["<all_urls>"]
      }
    ] 
}
