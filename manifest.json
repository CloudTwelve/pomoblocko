{
    "name": "Pomoblocko",
    "version": "1.0.0",
    "manifest_version": 3,
    "permissions": [
      "storage",
      "activeTab",
      "tabs",
      "nativeMessaging"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["pomoscripto.js"]
    }
    ],
    "background": {
      "scripts": "background.js",
      "persistent": true
    },
    "web_accessible_resources": [
      {
        "resources": ["landing.html", "landingstyles.css", "landingscript.js"],
        "matches": ["<all_urls>"]
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    }
    
}
